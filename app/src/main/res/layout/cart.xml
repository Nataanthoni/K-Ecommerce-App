<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:elevation="20dp"
                                       android:layout_marginTop="20dp"
                                       app:cardCornerRadius="10dp">

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/items"
                  android:text="3 Items"
                  android:textStyle="bold"
                  android:textSize="20dp"
                  android:textColor="#000000"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/items2"
                      android:text="KES 240"
                      android:textStyle="bold"
                      android:textSize="20dp"
                      android:textColor="#000000"
                      android:layout_alignParentRight="true"/>

        <ImageView android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/jacket2"
                   android:layout_below="@id/items"
                   android:layout_marginTop="10dp"
                   android:id="@+id/blackjacket"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:elevation="20dp"
                                       android:layout_marginTop="20dp"
                                       app:cardCornerRadius="10dp">

        <ImageView android:layout_width="210dp"
                   android:layout_height="200dp"
                   android:src="@drawable/jacket3"
                   android:layout_below="@id/items"
                   android:layout_marginTop="10dp"/>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                       android:layout_height="wrap_content"
                                       android:elevation="20dp"
                                       android:layout_marginTop="20dp"
                                       app:cardCornerRadius="10dp">

        <ImageView android:layout_width="210dp"
                   android:layout_height="200dp"
                   android:src="@drawable/jacket"
                   android:layout_below="@id/items"
                   android:layout_marginTop="10dp"/>


    </androidx.cardview.widget.CardView>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/thankyou"
              android:text="Thanyou for shopping with us"
              android:fontFamily="cursive"
              android:textStyle="bold"
              android:textSize="30dp"
              android:textColor="#000000"
              android:padding="10dp"
              android:textAlignment="center"/>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/colorPrimary"
            android:text="CHECKOUT"
            android:textSize="30dp"
            android:textColor="@color/white"
    />

</LinearLayout>